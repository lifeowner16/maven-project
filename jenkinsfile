pipeline {
    agent any

    stages {

        stage ('SCM Checkout') {

            steps {
              git 'https://github.com/lifeowner16/maven-project'
                }
            }

        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn compile clean'

                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn test'
                }
            }
        }

        stage ('Package Stage') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn package'
                }
            }
        }

        stage ('verify Stage') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn verify'
                }
            }
        }
        
        
        sshagent(['tomcatssh']) {
              sh 'scp -o StricthostkeyChecking=no -l cloudbees 18.185.135.61 uname -a'
        }
    }
}
