pipeline {
    agent any

    stages {
        stage ('SCM Checkout') {
              git 'https://github.com/lifeowner16/maven-project'
                }

        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn compile clean'

                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn test'
                }
            }
        }

        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn deploy'
                }      
            }
        }
    }
}
