pipeline {
    agent any

    stages {

        stage ('SCM Checkout') {

            steps {
              git 'https://github.com/lifeowner16/maven-project'
                }
            }

        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn compile clean'

                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn test'
                }
            }
        }

        stage ('Package Stage') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn package'
                }
            }
        }

        stage ('verify Stage') {
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn verify'
                }
            }
        }

        stage ('Deploy') {
            steps {
              sshagent(credentials : ['tomcatssh']) {
                  sh 'scp -o StrictHostKeyChecking=no */target/*.war ec2-user@172.31.47.128:/var/lib/tomcat/webapps'
                }
            }
        }        
    }
}
