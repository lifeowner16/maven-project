pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/lifeowner16/maven-project'
        }
  }
    {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn clean compile'
                }
            }        
        stage ('Test') {
        
            steps {
                withMaven(maven : 'maven') {
                    sh 'mvn test'
                 }
            }     
       }
}
}
}
